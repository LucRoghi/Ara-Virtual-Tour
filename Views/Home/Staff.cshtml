@model IEnumerable<AraVirtualTour.StaffModel>

@{
    ViewData["Title"] = "Meet the Staff";
}

<div class="d-flex p-2">
    @foreach (var item in Model) {
    <div class="card" style="width: 18rem; margin: 20px">
        <img class="card-img-top" src=".../100px180/" alt="Card image placeholder">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Title) In @Html.DisplayFor(modelItem => item.Department)</p>
        </div>
    </div>
    }
</div>